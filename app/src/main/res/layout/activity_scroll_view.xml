<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/small_padding"
    tools:context=".ScrollViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/square_dim">

            <View
                android:layout_width="@dimen/square_dim"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:background="@color/yellow" />

            <View
                android:id="@+id/light_red"
                android:layout_width="@dimen/square_dim"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/light_red" />

            <View
                android:id="@+id/blue"
                android:layout_width="@dimen/square_dim"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/Margin_dim"
                android:layout_toStartOf="@+id/light_red"
                android:background="@color/blue" />

            <View
                android:layout_width="@dimen/square_dim"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/blue"
                android:background="@color/light_blue" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_padding"
            android:text="@string/text" />
    </LinearLayout>
</ScrollView>